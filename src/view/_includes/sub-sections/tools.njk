{% macro tool(id, title, link = "") %}
  <div onmouseover="hover_in_popup('{{ id }}');" onmouseout="hover_out_popup('{{ id }}');">
    <li>
      {% if link == "" %}
        {{ title | safe }}
      {% else %}
        <a href="{{ link }}">{{ title }}: </a>
      {% endif %}
      <span onclick="click_popup('{{ id }}');" class="resources">⍰</span>
      <div class="hide" id="{{ id }}">{{ caller() | safe}}</div>
    </li>
  </div>
{% endmacro %}

